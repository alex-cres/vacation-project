            ),
            'primary key' => array(
                'request_id'
            )
        );
    }
    return $schema;
}

/**
 * Implements hook_uninstall().
 */
function event_calendar_holi_counter_uninstall()
{
    db_drop_table("event_calendar_days_counter");
    db_drop_table('event_calendar_request_counter');
    
}
