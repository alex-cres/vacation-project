                    'translatable' => TRUE
                )
            ),
            'primary key' => array(
                'counter_id'
            )
        );
    }
    if (!db_table_exists('event_calendar_request_counter')) {
        
        $schema['event_calendar_request_counter'] = array(
            'description' => 'Stores data abour the users',
            'fields' => array(
                'user_id' => array(
                    'type' => 'int',
                    'length' => 10,
                    'not null' => TRUE,
                    'description' => 'User id',
                    'translatable' => TRUE
                ),
                
                'type_letter' => array(
