                    'translatable' => TRUE
                ),
                'user_name' => array(
                    'type' => 'varchar',
                    'length' => 255,
                    'not null' => TRUE,
                    'description' => 'User Name',
                    'translatable' => TRUE
                ),
                'counter_id' => array(
                    'type' => 'serial',
                    'length' => 10,
                    'not null' => TRUE,
                    'description' => 'Counter id',
                    'translatable' => TRUE
                ),
                'counter_days' => array(
                    'type' => 'int',
                    'length' => 10,
                    'not null' => TRUE,
                    'description' => 'Counter days',
                    'translatable' => TRUE
                ),
                
                'counter_year' => array(
                    'type' => 'int',
                    'length' => 4,
                    'not null' => TRUE,
                    'description' => 'Counter year',
                    'translatable' => TRUE
                ),
                
                'counter_days_used' => array(
                    'type' => 'int',
                    'length' => 10,
                    'not null' => TRUE,
                    'default' => 0,
                    'description' => 'Counter used days',
                    'translatable' => TRUE
                ),
				'counter_extra' => array(
                    'type' => 'int',
                    'length' => 10,
                    'not null' => TRUE,
                    'default' => 0,
